{
  "name": "Sard",
  "styles": ["docs/assets/index.scss"],
  "base": "/sard-taro/",
  "publicDir": "docs/public",
  "buildSite": {
    "outDir": "site"
  },
  "build": {
    "entry": "src/index.ts",
    "cssEntry": "src/index.scss",
    "name": "Sard",
    "fileName": "index",
    "outDir": "dist",
    "srcDir": "src",
    "external": ["react", "classnames", "@tarojs/taro", "@tarojs/components"]
  },
  "site": {
    "title": "Sard",
    "logo": "logo.svg",
    "seo": {
      "title": "sard-taro | React 移动端 UI 组件库",
      "description": "sard-taro | React 移动端 UI 组件库"
    },
    "routes": [
      {
        "title": "首页",
        "path": "/",
        "filePath": "docs/markdown/home.md",
        "hidden": true
      },
      {
        "title": "指引",
        "path": "/guide",
        "index": "intro",
        "children": [
          {
            "type": "group",
            "title": "指引",
            "items": [
              {
                "title": "介绍",
                "path": "intro",
                "filePath": "docs/markdown/intro.md"
              },
              {
                "title": "快速上手",
                "path": "quickstart",
                "filePath": "docs/markdown/quickstart.md"
              }
            ]
          }
        ]
      },
      {
        "title": "组件",
        "path": "/components",
        "index": "button",
        "children": [
          {
            "type": "group",
            "title": "基础组件",
            "items": [
              {
                "title": "Button 按钮",
                "path": "button",
                "filePath": "src/button"
              },
              {
                "title": "ConfigProvider 全局配置",
                "path": "config-provider",
                "filePath": "src/config-provider"
              },
              {
                "title": "Icon 图标",
                "path": "icon",
                "filePath": "src/icon"
              },
              {
                "title": "Locale 国际化",
                "path": "locale",
                "filePath": "src/locale"
              },
              {
                "title": "style 样式",
                "path": "style",
                "filePath": "src/style"
              }
            ]
          },
          {
            "type": "group",
            "title": "布局",
            "items": [
              {
                "title": "mesh 宫格",
                "path": "mesh",
                "filePath": "src/mesh"
              },
              {
                "title": "grid 栅格",
                "path": "grid",
                "filePath": "src/grid"
              }
            ]
          },
          {
            "type": "group",
            "title": "表单组件",
            "items": [
              {
                "title": "Calendar 日历",
                "path": "calendar",
                "filePath": "src/calendar"
              },
              {
                "title": "Cascader 级联选择",
                "path": "cascader",
                "filePath": "src/cascader"
              },
              {
                "title": "Checkbox 复选框",
                "path": "checkbox",
                "filePath": "src/checkbox"
              },
              {
                "title": "DatetimePicker 日期时间选择器",
                "path": "datetime-picker",
                "filePath": "src/datetime-picker"
              },
              {
                "title": "Form 表单",
                "path": "form",
                "filePath": "src/form"
              },
              {
                "title": "Input 输入框",
                "path": "input",
                "filePath": "src/input"
              },
              {
                "title": "NumberKeyboard 数字键盘",
                "path": "number-keyboard",
                "filePath": "src/number-keyboard"
              },
              {
                "title": "PasswordInput 密码输入框",
                "path": "password-input",
                "filePath": "src/password-input"
              },
              {
                "title": "Picker 选择器",
                "path": "picker",
                "filePath": "src/picker"
              },
              {
                "title": "PopoutInput 弹出式输入框",
                "path": "popout-input",
                "filePath": "src/popout-input"
              },
              {
                "title": "Radio 单选按钮",
                "path": "radio",
                "filePath": "src/radio"
              },
              {
                "title": "Rate 评分",
                "path": "rate",
                "filePath": "src/rate"
              },
              {
                "title": "Search 搜索",
                "path": "search",
                "filePath": "src/search"
              },
              {
                "title": "Slider 滑动器选择器",
                "path": "slider",
                "filePath": "src/slider"
              },
              {
                "title": "Stepper 步进器",
                "path": "stepper",
                "filePath": "src/stepper"
              },
              {
                "title": "Switch 开关",
                "path": "switch",
                "filePath": "src/switch"
              },
              {
                "title": "Upload 上传",
                "path": "upload",
                "filePath": "src/upload"
              }
            ]
          },
          {
            "type": "group",
            "title": "数据展示",
            "items": [
              {
                "title": "Avatar 头像",
                "path": "avatar",
                "filePath": "src/avatar"
              },
              {
                "title": "Accordion 手风琴",
                "path": "accordion",
                "filePath": "src/accordion"
              },
              {
                "title": "Badge 徽标",
                "path": "badge",
                "filePath": "src/badge"
              },
              {
                "title": "Cell 单元格",
                "path": "cell",
                "filePath": "src/cell"
              },
              {
                "title": "Collapse 折叠",
                "path": "collapse",
                "filePath": "src/collapse"
              },
              {
                "title": "CountDown 倒计时",
                "path": "count-down",
                "filePath": "src/count-down"
              },
              {
                "title": "Empty 空状态",
                "path": "empty",
                "filePath": "src/empty"
              },
              {
                "title": "NoticeBar 公告栏",
                "path": "notice-bar",
                "filePath": "src/notice-bar"
              },
              {
                "title": "Popout 弹出框",
                "path": "popout",
                "filePath": "src/popout"
              },
              {
                "title": "Popover 气泡弹出框",
                "path": "popover",
                "filePath": "src/popover"
              },
              {
                "title": "Popup 弹出层",
                "path": "popup",
                "filePath": "src/popup"
              },
              {
                "title": "ProgressBar 条形进度条",
                "path": "progress-bar",
                "filePath": "src/progress-bar"
              },
              {
                "title": "ProgressCircle 环形进度条",
                "path": "progress-circle",
                "filePath": "src/progress-circle"
              },
              {
                "title": "Swiper 滑块视图容器",
                "path": "swiper",
                "filePath": "src/swiper"
              },
              {
                "title": "Tag 标签",
                "path": "tag",
                "filePath": "src/tag"
              }
            ]
          },
          {
            "type": "group",
            "title": "导航组件",
            "items": [
              {
                "title": "Dropdown 下拉菜单",
                "path": "dropdown",
                "filePath": "src/dropdown"
              },
              {
                "title": "IndexBar 索引栏",
                "path": "index-bar",
                "filePath": "src/index-bar"
              },
              {
                "title": "Navbar 头部导航",
                "path": "navbar",
                "filePath": "src/navbar"
              },
              {
                "title": "Pagination 分页",
                "path": "pagination",
                "filePath": "src/pagination"
              },
              {
                "title": "Steps 步骤条",
                "path": "steps",
                "filePath": "src/steps"
              },
              {
                "title": "Tabbar 标签栏",
                "path": "tabbar",
                "filePath": "src/tabbar"
              },
              {
                "title": "Tabs 标签页",
                "path": "tabs",
                "filePath": "src/tabs"
              }
            ]
          },
          {
            "type": "group",
            "title": "反馈组件",
            "items": [
              {
                "title": "ActionSheet 动作面板",
                "path": "action-sheet",
                "filePath": "src/action-sheet"
              },
              {
                "title": "Dialog 对话框",
                "path": "dialog",
                "filePath": "src/dialog"
              },
              {
                "title": "Loading 加载",
                "path": "loading",
                "filePath": "src/loading"
              },
              {
                "title": "Notify 通知栏",
                "path": "notify",
                "filePath": "src/notify"
              },
              {
                "title": "Result 结果",
                "path": "result",
                "filePath": "src/result"
              },
              {
                "title": "ShareSheet 分享面板",
                "path": "share-sheet",
                "filePath": "src/share-sheet"
              },
              {
                "title": "Skeleton 骨架屏",
                "path": "skeleton",
                "filePath": "src/skeleton"
              },
              {
                "title": "Toast 轻提示",
                "path": "toast",
                "filePath": "src/toast"
              }
            ]
          }
        ]
      }
    ]
  }
}
